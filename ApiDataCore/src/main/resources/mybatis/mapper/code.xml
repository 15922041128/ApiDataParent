<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.pbccrc.api.core.mapper.CodeMapper">
	
	<select id="queryByCode" parameterType="java.lang.String" resultType="java.util.HashMap">
		select * from code where codeName = #{codeName}
	</select>
	
	<select id="queryAll" parameterType="java.lang.String" resultType="org.pbccrc.api.base.bean.Code">
		select * from code order by codeName
	</select>
	
</mapper>