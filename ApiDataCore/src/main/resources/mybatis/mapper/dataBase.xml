<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.pbccrc.api.core.mapper.DataBaseMapper">
	
	<select id="queryAllTable" resultType="java.util.HashMap">
		select * from user_tables 
	</select>
	
	<select id="queryColumnByTable" parameterType="java.lang.String" resultType="java.util.HashMap">
		select column_name, data_type, data_length from user_tab_columns where Table_Name = #{codeName}
	</select>
	
</mapper>