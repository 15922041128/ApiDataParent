<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.pbccrc.api.core.mapper.ZhIdentificationMapper">
	
	<select id="queryByIdentifier" parameterType="java.lang.String" resultType="java.util.HashMap">
		select * from identification where identifier = #{identifier}
	</select>
	
	<select id="getInnerID" parameterType="java.util.HashMap" resultType="java.util.HashMap">
		select * from identification where identifier = #{identifier} 
		<if test="name !=null and name != '' ">
			and name = #{name}
        </if>
	</select>
	
</mapper>