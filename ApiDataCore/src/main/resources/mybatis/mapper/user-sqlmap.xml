<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.pbccrc.api.core.mapper.UserMapper">
	
	<select id="isExist" parameterType="java.lang.String" resultType="java.lang.Integer">
		select count(1) from user where userName = #{userName}
	</select>
	
	<insert id="addUser" parameterType="org.pbccrc.api.base.bean.User" keyProperty="ID">
		insert into user(userName, password, compName, compTel, contactName, contactTel, auth) values(
			#{userName}, #{password}, #{compName}, #{compTel}, #{contactName}, #{contactTel}, #{auth})
	</insert>
	
	<select id="login" parameterType="org.pbccrc.api.base.bean.User" resultType="org.pbccrc.api.base.bean.User">
		select * from user where userName = #{userName} and password = #{password} 
	</select>
	
	<update id="updateUser" parameterType="org.pbccrc.api.base.bean.User">
		update user
		<set>  
			<if test="password !=null and password != '' ">
            	password = #{password},
        	</if>
        	<if test="compName !=null and compName != '' ">
            	compName = #{compName},
        	</if>
        	<if test="compTel !=null and compTel != '' ">
            	compTel = #{compTel},
        	</if>
        	<if test="contactName !=null and contactName != '' ">
            	contactName = #{contactName},
        	</if>
        	<if test="contactTel !=null and contactTel != '' ">
            	contactTel = #{contactTel},
        	</if>
        	<if test="auth !=null and auth != '' ">
            	auth = #{auth},
        	</if>
        </set>
        <where>
			ID = #{ID}
		</where>	
		
	</update>
	
	<select id="getUserByID" parameterType="java.lang.String" resultType="org.pbccrc.api.base.bean.User">
		select * from user where ID = #{userID}
	</select>
	
</mapper>