    <!--  
    <bean id="dataSource" class="org.pbccrc.api.core.dao.datasource.DynamicDataSource">  
	    <property name="targetDataSources">  
	        <map key-type="Java.lang.String">  
	            <entry value-ref="mysqlDataSource" key="mysqlDataSource"></entry>  
